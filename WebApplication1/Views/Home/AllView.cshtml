@using Microsoft.EntityFrameworkCore;
@using WebApplication1.Models
@{
    ViewData["Title"] = "AllView";
    Layout = "_Layout";
}
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>All people</title>
    <style type="text/css">

        .brd {
            border: 4px double black;
            background: #e9e5e5; 
            padding: 20px; 
        }
    </style>
    </head>

    <body>
    <div class="fontStyle"
         align="center">

            <table border="1">
                <tr >
                    <td width="200">ID</td>
                    <td width="200">First Name</td>
                    <td width="200">Second Name</td>
                    <td width="200">Paternal Name</td>
                    <td width="200">Delete</td>
                    <td width="200">Edit</td>
                </tr>

            @foreach (Person person in ViewBag.Persons)
                {
                    <tr>
                    <td width="200">
                        @* <a href="/Home/ShowPersonFullData" onclick=SelectPersons(person.ID) name="ID" value=@person.ID>@person.ID</a> *@

                        <form action="~/Home/PersonFullData" method="put">
                            <p><input type="submit" value="@person.ID" name="ID"/></p>
                        </form>
                    </td>



                    <td width="200">@person.FirstName</td>
                    <td width="200">@person.SecondName</td>
                    <td width="200">@person.PaternalName</td>

                    <td width ="200">
                        <form action="~/Home/DeletePerson" method="delete">
                            <p><input type="submit" value="@person.ID" name="ID" />Delete</p>
                        </form>
                    </td>
                    
                    <td width ="200">
                        <form action="~/Home/Edit" method="put">
                            <p><input type="submit" value="@person.ID" name="ID" />Edit</p>
                        </form>
                    </td>


                    </tr>
                }
            </table>

            <br />
        </div>
    </body>
</html>
